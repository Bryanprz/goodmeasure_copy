<h1>Listing cohorts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= cohort.name %></td>
        <td><%= cohort.description.truncate(30) %></td>
        <td><%= link_to 'Show', admin_cohort_path(cohort) %></td>
        <td><%= link_to 'Edit', edit_admin_cohort_path(cohort) %></td>
        <td><%= link_to 'Destroy', admin_cohort_path(cohort), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

