<h1>Listing users</h1>

<% @users.each do |user| %>
	<article class="admin-user-module">
		<figure class="avatar"><%= image_tag user.avatar.url(:thumb) %></figure>
		<%= link_to user.username, user_path(user) %><br>
		<%= user.first_name %> <%= user.last_name %><br>
		<%= user.email %><br>
		<%= link_to 'Edit', edit_admin_user_path(user) %>
	</article>
<% end %>

