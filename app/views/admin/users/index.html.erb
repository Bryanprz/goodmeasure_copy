<aside>
	<header> 
	</header>
</aside>

<section id="main">

	<h2>Currently Enrolled Students</h2>

	<section class="module">

		<% @users.each do |user| %>

		<article class="quarter">
			<figure class="avatar"><%= image_tag user.avatar.url(:thumb) %></figure>
			<%= link_to user.username, user_path(user) %><%= " (Admin)" if user.admin %><br>
			<%= user.first_name %> <%= user.last_name %><br>
			<%= user.email %><br>
			<%= link_to 'Edit', edit_admin_user_path(user) %>
		</article>
		<% end %>
	</section>
	<section class="module">
		<p> <%= link_to 'Invite a New Student', new_admin_invite_path %> </p>
	</section>
</section>
