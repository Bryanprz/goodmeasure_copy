<div class="log-in-background">

<aside>

<div class="Sign_Form">

<h1>Sign In</h1>

	<%= form_tag '/login', class: 'login-form' do %>
		<h3>Username:</br> <%= text_field_tag :username %></h3> 
		<h3>Password:</br> <%= password_field_tag :login_password %> <%= submit_tag("Log In") %> </h3> 
	<% end %>


</div>

</aside>



</div>







