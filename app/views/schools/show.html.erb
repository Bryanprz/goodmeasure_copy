<aside>
	<header>
		<h1> <%= @school.name %> Dashboard </h1>
		<p> <%= @school.description %> </p>
		<hr />
	</header>
</aside>

<section id="main">

  	<p class="small-header module">Cohorts</p>
  	
  	<section class="module">
		<% @current_user.cohorts.order(:id).each do |cohort| %>

		<article class="main-article">

			<h3><%= link_to cohort.name, cohort_path(cohort) %></h3>

			<p><%= cohort.description %></p>

			<p><small>You're a<%= "n" if @current_user.is_instructor?(cohort) %> <%= @current_user.role(cohort).title %></small></p>

		</article>
		<% end %>
	</section>
</section>
