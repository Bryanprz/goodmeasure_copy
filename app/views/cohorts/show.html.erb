<section class="full">
<%= link_to 'Back', root_path %>
<h1> <%= @school.name %> <%= @cohort.name %> </h1>

</section>


<section class="half">

<h3> Cohort Description </h3>

  
 <p> <%= @cohort.description %> </p>

</section>


<section class="half">

<h3>Units</h3>

<table>

   <% @cohort.units.each do |unit| %>
      <tr>
        <td><%= link_to unit.name, unit_path(unit) %></td>
      </tr>
     
    <% end %>
</table>

 <%= link_to 'New Unit', new_cohort_unit_path(@cohort.id) if @current_user.is_instructor?(@cohort) %>
 <%= link_to 'Show all submissions', cohort_submissions_path(@cohort.id) if @current_user.is_staff?(@cohort) %>

</section>