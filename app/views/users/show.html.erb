  <div class="profile-cover-photo">
	<img src="http://www.wired.com/wp-content/uploads/2014/06/health-conf-inline.jpg" style="width:100%;">
  </div>

  <figure class="avatar-large avatar"><%= image_tag @user.avatar.url(:medium) %></figure>

  <section id="profile">

  	<h2><%= @user.name %></h2>


  <section id="profile-block">

  		<h3>Personal Info</h3>
  		
  			<p>Username: <%= @user.username %></p>
  	
  			<p>First Name: <%= @user.first_name %></p>
  	
  			<p>Last Name: <%= @user.last_name %></p>
  
  			<p>Email: <%= @user.email %></p>
   </section>

  <section id="profile-block">
  
  		<h3>Cohorts Enrolled In</h3>
  
  	     <% @user.cohorts.each do |cohort| %>
  			 <p> <%= cohort.name %> </p>
  			<% end %>
  	 </p>
      </section>  
     </section>  
  </section>