<aside> 
<section id="back"> <%= link_to 'Back', submissions_path %> </section>
<h1> </h1>
</aside>

<section id="main">

<h2>Editing Submission</h2>

<section class="module">


<%= form_for @submission do |form| %>
	<%= form.fields_for :comment do |f| %>
		<%= f.hidden_field :submission_id, value: @submission.id %>
		<%= f.hidden_field :user_id, value: @current_user.id %>
		<%= f.label :content %>
		<%= f.text_field :content %>
	<% end %>
	<%= form.hidden_field :reviewed, value: true %>
	<%= form.submit "Correct", name: :correctness, value: true %>
	<%= form.submit "Incorrect", name: :correctness, value: false %>
<% end %>

</section>

</section>
